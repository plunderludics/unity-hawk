{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "Library/ScriptAssemblies/UnityHawk.dll"
          ],
          "exclude": [
            "Library/PackageCache/**"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/*.{md,yml}",
          "*.md",
          "*.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../docs",
    "template": [
      "default",
      "modern",
      "unityhawk-template"
    ],
    "globalMetadata": {
      "_appName": "UnityHawk",
      "_appTitle": "UnityHawk",
      "_appLogoPath": "images/mario.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}